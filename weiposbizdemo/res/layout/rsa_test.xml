<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <include
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_layout"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" android:gravity="center">

            <Button
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:paddingLeft="40dp" android:paddingRight="40dp" android:paddingBottom="10dp"
                android:paddingTop="10dp" android:text="私钥解码公钥加密的数据" android:id="@+id/btn_testdecrypt"/>

            <Button
                android:layout_marginTop="20dp"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:paddingLeft="40dp" android:paddingRight="40dp" android:paddingBottom="10dp"
                android:paddingTop="10dp" android:text="公钥解密私钥签名的数据" android:id="@+id/btn_testsign"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>