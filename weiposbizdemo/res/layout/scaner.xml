<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weipos_bg"
    android:orientation="horizontal">

    <include
        android:id="@+id/header_layout"
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_scaner_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_normal_selector"
                android:text="扫描二维码"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal_size" />

            <Button
                android:id="@+id/btn_scaner_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_normal_selector"
                android:text="扫描条码"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal_size" />

            <Button
                android:id="@+id/btn_scaner_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_normal_selector"
                android:text="扫描特定规则条码/n（扫描以99开头的或者第5位置以“/2”开头的）"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal_size"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_scaner_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_normal_selector"
                android:text="扫描带/条码（小米之家老接口）"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal_size"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>