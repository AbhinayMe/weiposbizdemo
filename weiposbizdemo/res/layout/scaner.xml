<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weipos_bg"
    android:orientation="horizontal">

    <include
        android:id="@+id/header_layout"
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_scaner_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_normal_selector"
                android:text="Scan QR code"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal_size" />

            <Button
                android:id="@+id/btn_scaner_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_normal_selector"
                android:text="Scanning barcode"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal_size" />

            <Button
                android:id="@+id/btn_scaner_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_normal_selector"
                android:text="Scan a specific rule barcode /n (scanning starts with 99 or the 5th position starts with “/2”）"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal_size"
                android:visibility="visible"/>

            <Button
                android:id="@+id/btn_scaner_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_normal_selector"
                android:text="Scanning tape / barcode (the old interface of Xiaomi home)"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal_size"
                android:visibility="visible"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>