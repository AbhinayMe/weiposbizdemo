<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weipos_bg"
    android:orientation="horizontal" >

    <include
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/test_content_stap_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:textColor="@color/black"
                android:text="1：点击按钮模拟声波通讯"
                android:layout_weight="1"
                android:gravity="top"
                android:textSize="@dimen/font_big_size" />
            <Button
                    android:id="@+id/btn_do_sonar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@drawable/btn_normal_selector"
                    android:text="开始模拟声波通讯"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_normal_size" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>